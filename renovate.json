{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>elastic/renovate-config",
    "schedule:automergeMonthly",
    "npm:unpublishSafe",
    "mergeConfidence:all-badges"
  ],
  "schedule": [
    "* 0-3 1 * *"
  ],
  "prConcurrentLimit": 10,
  "packageRules": [
    {
      "matchManagers": [
        "dockerfile"
      ],
      "pinDigests": false
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "pinDigests": false
    },
    {
      "matchDepNames": [
        "@types/**"
      ],
      "bumpVersion": "minor"
    }
  ]
}
