{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>elastic/renovate-config"
  ],
  "schedule": [
    "* * * * 0"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true,
      "labels": [
        "backport 8.x"
      ]
    },
    {
      "matchManagers": [
        "dockerfile"
      ],
      "pinDigests": false
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "pinDigests": false
    }
  ]
}
